{% extends "base.html.twig" %}

{% block body %}
<div>
<table>
   <tr>
      <th class="text text-bg-success" colspan="2">Customer Detail</th>
   </tr>
   <tr>
      <th>Customer Name</th>
      <td>{{ customer.name }}</td>
   </tr>
   <tr>
      <th>Class Quantity</th>
      <td>{{ class.quantity }}</td>
   </tr>
   <tr>
      <th>Course List</th>
      <td>
         {% if class.courses != null %}
            {% for course in class.courses %}
            <a href="{{ path('view_course_by_id', {'id':course.id })}}">
                  {{ course.name }}
            </a>   
            <br>
         {% endfor %}
         {% endif %}     
      </td>
   </tr>
</table>
</div>
{% endblock %}