{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{# {% extends "base.html.twig" %} #}
{% block body %}

		
		
		<div class="container">
		<h1 class="text-center">category List</h1>
		<div class="row">
		<div class="col-md-2">
		<a type="button" style="" class="button" href="{{ path('add_category')}}">Add</a>
		</div>
		<div class="col-md-4">
                            <option selected disabled>Admin</option>
                            <li><a href="{{path ('view_list_category')}}">Category</a></li>
                            <li><a href="{{path ('view_list_product')}}">Product update</a></li>
                            <li><a href="{{path ('view_list_customer')}}">Customer update</a></li>
							</div>
							<div class="col-md-4">
                            <li><a href="{{path ('view_list_employee')}}">Employee update</a></li>
                            <li><a href="{{path ('image_index')}}">Image update</a></li>
                            <li><a href="{{path ('user_index')}}">User update</a></li>
                            </div>
		
	{# Display a list of all category in a table #}
	
	<div class="col-lg-12">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>CatID</th>
				<th>Name</th>
                <th>Description</th>
				<th>menu</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.catID }}</td>
					<td>{{ category.name }}</td>
                    <td>{{category.description}}</td>
					<td>

						<a href="{{ path('edit_category', {'id': category.id })}}">Edit</a>
						<a href="{{ path('delete_category', {'id': category.id })}}" onclick="return confirm('Do you want to delete this category ?');">Delete</a>
					</td>
				</tr>
			{% endfor %}
			
		</tbody>
	</table>
	</div>
	</div>
		</div>

{% endblock %}
