{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}

	{# Display a list of all category in a table #}
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>ProductID</th>
				<th>Quantiy</th>
				<th>menu</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ cart.id }}</td>
					<td>{{ cart.email }}</td>
					<td>{{ cart.roductID }}</td>
					<td>{{ category.quantity }}</td>
					<td>{{ca}}</td>
					<td>
						<a href="{{ path('view_cart_by_id', {'id': cart.id })}}">Detail</a>
						<a href="{{ path('edit_category', {'id': category.id })}}">Edit</a>
						<a href="{{ path('delete_category', {'id': category.id })}}" onclick="return confirm('Do you want to delete this category ?');">Delete</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
